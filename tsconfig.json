{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "nodenext",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": true,
        "rootDir": "./src",
    },
    "exclude": [
        "examples",
        "dist"
    ]
}